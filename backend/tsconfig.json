{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "baseUrl": ".",
    "paths": {
      "configs/*": ["./configs/*"],
      "app": ["src/app"]
    }
  },
  "compileOnSave": false,
  "include": ["src/**/*", "configs/**/*", "**/*.ts", "**/*.tsx"],
  "files": ["src/main.ts"],
  "exclude": ["node_modules", "dist"]
}
